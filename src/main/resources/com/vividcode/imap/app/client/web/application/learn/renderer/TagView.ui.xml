<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        >
    <ui:with field='title' type='java.lang.String'/>
    <ui:with field='description' type='java.lang.String'/>
    <ui:with field='color' type='java.lang.String'/>

    <ui:style>
        .tag-div {
            color: white;
            margin: 10px 0;
            padding: 5px 0;
            width: 60px;
            cursor: pointer;
            text-align: center;
            border: 1px solid;
            opacity: 0.7;
            -webkit-transition: opacity linear 0.2s, background-color linear 0.2s, border linear 0.2s;
            -moz-transition: opacity linear 0.2s, background-color linear 0.2s, border linear 0.2s;
            -o-transition: opacity linear 0.2s, background-color linear 0.2s, border linear 0.2s;
        }

        .tag-div:hover {
            opacity: 1;
            border: 1px solid;
        }
    </ui:style>
    <div class="{style.tag-div}" style="background-color : {color}; border: 1px solid {color};">
        <ui:text from="{title}"/>
    </div>
</ui:UiBinder>
