<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .label {
            display: inline-block;
            width: 92px;
            margin-right: 3px;
            text-align: right;
        }

        .small {
            width: 65px;
        }

        .row {
            margin-bottom: 6px;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.row}">
            <g:Label styleName="{style.label}" text="Login"/>
            <g:TextBox ui:field="username" width="350px"/>
        </div>

        <div class="{style.row}">
            <g:Label styleName="{style.label}" text="Nom"/>
            <g:TextBox ui:field="firstName" width="130px"/>

            <g:Label styleName="{style.label} {style.small}" text="Prénom"/>
            <g:TextBox ui:field="lastName" width="130px"/>
        </div>

        <div class="{style.row}">
            <g:Label styleName="{style.label}" text="Addresse mail"/>
            <g:TextBox ui:field="email" width="350px"/>
        </div>

        <div class="{style.row}">
            <g:Label styleName="{style.label}" text="Mot de passe"/>
            <g:PasswordTextBox ui:field="password" width="350px"/>
        </div>

        <div class="{style.row}">
            <g:Label styleName="{style.label}" text="Rôle"/>
            <g:ValueListBox ui:field="authority" width="350px"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
