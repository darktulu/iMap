<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .body {
            background-color: #f5f5f5;
            overflow: auto;
        }

        .wrapper {
            margin: auto;
            max-width: 1000px;
            overflow: auto;
        }

        .center {
            margin: 10px auto auto;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.body}">

        <div class="{style.wrapper}">
            <g:HTMLPanel ui:field="addPanel" width="672px" addStyleNames="{style.center}"/>
        </div>

        <div class="{style.wrapper}">
            <g:HTMLPanel ui:field="tablePanel" width="966px" addStyleNames="{style.center}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
