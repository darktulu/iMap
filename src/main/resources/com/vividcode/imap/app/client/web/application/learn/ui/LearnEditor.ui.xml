<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .resetInput {
            width: 450px;
            margin: 0 !important;
            -webkit-box-shadow: none !important;
            -moz-box-shadow: none !important;
            box-shadow: none !important;
            -webkit-transition: border linear .2s, box-shadow linear .2s, width linear .2s;
            -moz-transition: border linear .2s, box-shadow linear .2s, width linear .2s;
            -o-transition: border linear .2s, box-shadow linear .2s, width linear .2s;
            background-color: #ffffff;
            border: none !important;
            padding: 5px 10px !important;
            resize:none !important;
        }

        .inline {
            display: inline-block;
            width: 470px;
            border: 1px solid #cbcbcb;
            -webkit-transition: border linear .2s;
            -moz-transition: border linear .2s;
            -o-transition: border linear .2s;
        }

        .inline:hover {
            border: 1px solid rgb(0, 153, 255);
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.inline}">
        <g:TextBox ui:field="title" styleName="{style.resetInput}"/>
        <g:TextArea ui:field="content" styleName="{style.resetInput}"/>
    </g:HTMLPanel>
</ui:UiBinder>
